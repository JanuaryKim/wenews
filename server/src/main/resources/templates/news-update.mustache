{{>layout/header}}

<h1>News 수정페이지</h1>

<div class="col-md-12">
	<div class="col-md-4">
		<form>
			<div class="form-group">
				<label for="title">글 번호</label>
				<input type="text" class="form-control" id="id" value="{{news.newsId}}" readonly>
			</div>
			<div class="form-group">
				<label for="title">제목</label>
				<input type="text" class="form-control" id="title" value="{{news.newsTitle}}">
			</div>
			<div class="form-group">
				<label for="author"> 작성자 </label>
				<input type="text" class="form-control" id="author" value="{{news.memberEmail}}" readonly>
			</div>
			<div class="form-group">
				<label for="content"> 내용 </label>
				<textarea class="form-control" id="content">{{news.newsContents}}</textarea>
			</div>
			<div class="form-group">

				<label for="content">태그</label>

				<!-- 배열 요소를 반복하여 출력 -->
				{{#news.newsTags}}
					<input type="text" class="form-control" name="tags" value={{.}}>
				{{/news.newsTags}}
			</div>

			<div class="form-group">
				<label for="content">첨부 파일 (최대 1개, 최대 20MB) jpeg,png,jpg,gif 만 가능</label>
				{{#news.newsImages}}
					<div class="news-images">
						<img src="http://localhost:8080{{url}}">
						<button type="button" class="deleteBtn" id="{{imageId}}" onclick="imgDelete(this.id)">X</button>
					</div>
				{{/news.newsImages}}
			</div>

			<input type="file" class="form-control" id="file" accept=".jpeg,.png,.jpg,.gif">
		</form>
		<a href="/" role="button" class="btn btn-secondary">취소</a>
		<button type="button" class="btn btn-primary" id="btn-update">수정 완료</button>
		<button type="button" class="btn btn-danger" id="btn-delete">삭제</button>
	</div>
</div>



{{>layout/footer}}